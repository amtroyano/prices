{
  "openapi": "3.1.0",
  "info": {
    "title": "Pricing API",
    "description": "Servicio para la gestión de precios y tarifas de productos por fechas y prioridad.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/v1",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Prices",
      "description": "API para consulta de tarifas de precios de productos"
    }
  ],
  "paths": {
    "/api/prices": {
      "get": {
        "tags": [
          "Prices"
        ],
        "summary": "Consultar precio aplicable",
        "description": "Devuelve el precio con mayor prioridad para un producto, cadena y fecha específica.",
        "operationId": "getPrice",
        "parameters": [
          {
            "name": "productId",
            "in": "query",
            "description": "Identificador del producto",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "minimum": 1
            }
          },
          {
            "name": "brandId",
            "in": "query",
            "description": "Identificador de la marca",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 1
            }
          },
          {
            "name": "dateToSearch",
            "in": "query",
            "description": "Fecha de aplicación (ISO 8601)",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Precio encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PriceResponse"
                }
              }
            }
          },
          "404": {
            "description": "No se encontró un precio aplicable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "timestamp": "2020-06-14T16:00:00Z",
                  "status": 404,
                  "message": "No existe tarifa para la fecha indicada",
                  "path": "/api/prices"
                }
              }
            }
          },
          "400": {
            "description": "Parámetros de entrada inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "timestamp": "2020-06-14T10:00:00Z",
                  "status": 400,
                  "message": "Parámetros de entrada inválidos",
                  "path": "/api/prices"
                }
              }
            }
          },
          "500": {
            "description": "Error Interno",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "timestamp": "2020-06-14T16:00:00Z",
                  "status": 500,
                  "message": "Error Interno del servidor",
                  "path": "/api/prices"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PriceResponse": {
        "type": "object",
        "description": "Información del precio final aplicable",
        "properties": {
          "productId": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "brandId": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "priceList": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "startDate": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "endDate": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "finalPrice": {
            "type": "number",
            "readOnly": true
          },
          "currency": {
            "type": "string",
            "readOnly": true
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "description": "Objeto de error",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "message": {
            "type": "string",
            "readOnly": true
          },
          "path": {
            "type": "string",
            "readOnly": true
          }
        }
      }
    }
  }
}