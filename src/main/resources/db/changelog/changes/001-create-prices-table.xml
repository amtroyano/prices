<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="001" author="author">
        <createTable tableName="PRICES">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="BRAND_ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="START_DATE" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="END_DATE" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE_LIST" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="PRODUCT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="PRIORITY" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="CURR" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="IDX_PRICES" tableName="PRICES">
            <column name="BRAND_ID"/>
            <column name="START_DATE"/>
            <column name="END_DATE"/>
            <column name="PRODUCT_ID"/>
        </createIndex>

        <!-- Bloque de Rollback: Se ejecuta en orden inverso a la creaciÃ³n -->
        <rollback>
            <dropIndex indexName="IDX_PRICES" tableName="PRICES"/>
            <dropTable tableName="PRICES"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
